{
  "permissions": [
    "storage",
    "tabs",
    "https://www.googleapis.com/",
    "identity"
  ],
  "background": {
    "service_worker": "background-service.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "manifest_version": 3,
  "name": "email-deleter",
  "version": "1.0",
  "description": "Automatically deletes all emails within Gmail and handles follow-ups with an apology."
}